<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/_10dp"
    android:layout_height="@dimen/_150dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_recycler_product"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="@dimen/_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10dp">
        <ImageView
            android:id="@+id/iv_recycler_roduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10dp"
            android:src="@drawable/img_example_2"
            android:contentDescription="@string/imageview"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    
    <TextView
        android:id="@+id/name_recycler_product"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_recycler_product"
        android:text="@string/short_verano"
        android:textSize="@dimen/_12sp"/>

    <TextView
        android:id="@+id/tv_recycler_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="$ 12.000"
        android:textSize="@dimen/_12sp"
        android:fontFamily="@font/robotocondensedsemibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_recycler_product"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>