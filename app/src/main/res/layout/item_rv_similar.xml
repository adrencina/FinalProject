<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/custom_rectangle_shape"
    android:elevation="@dimen/_10dp">

    <ImageView
        android:id="@+id/iv_search_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/img_example"
        android:layout_marginStart="@dimen/_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_seach_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_search_photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rusty" />

    <TextView
        android:id="@+id/tv_search_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/_30dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_search_photo"
        app:layout_constraintTop_toBottomOf="@id/tv_seach_title"
        tools:text="Buzo canguro capucha con cordon" />

    <TextView
        android:id="@+id/tv_search_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="24dp"
        android:textSize="22sp"
        android:fontFamily="@font/robotoregular"
        app:layout_constraintStart_toEndOf="@id/iv_search_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        tools:text="  52.000" />
    <TextView
        android:id="@+id/tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:fontFamily="@font/robotoregular"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="113dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_rectangle_shape"
        android:backgroundTint="@color/login_In"
        android:elevation="@dimen/_50dp"
        android:text="Ver"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_search_empty_heart"
        android:layout_width="@dimen/_20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_heart_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_search_full_heart"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_heart_2"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>