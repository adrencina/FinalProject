<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_267dp"
    android:layout_height="@dimen/_276dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/_249dp"
        android:layout_height="@dimen/_276dp"
        app:cardBackgroundColor="#EEEEEE"
        app:cardCornerRadius="@dimen/_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_211dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:background="@drawable/circle_heart_white" />

        <ImageView
            android:id="@+id/iv_ic_heart"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_marginStart="@dimen/_216dp"
            android:layout_marginTop="@dimen/_14dp"
            android:layout_marginEnd="@dimen/_13dp"
            android:contentDescription="@string/icon_heart"
            android:src="@drawable/ic_heart_1" />

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/_167dp"
            android:layout_height="@dimen/_180dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_48dp"
            android:layout_marginBottom="@dimen/_48dp"
            android:contentDescription="@string/img_product"
            tools:src="@drawable/img_example">

        </ImageView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>