<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="267dp"
    android:layout_height="276dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="249dp"
        android:layout_height="276dp"
        app:cardBackgroundColor="#EEEEEE"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="211dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:background="@drawable/circle_heart_white" />

        <ImageView
            android:id="@+id/iv_ic_heart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="13dp"
            android:contentDescription="@string/icon_heart"
            android:src="@drawable/ic_heart_1" />

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="167dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"
            android:contentDescription="@string/img_product"
            tools:src="@drawable/img_example">

        </ImageView>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>