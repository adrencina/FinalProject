<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ImagesFragment">

    <LinearLayout
        android:id="@+id/ll_left_bar"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#7353BA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_images_Fragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:padding="0dp"
            android:layout_marginTop="120dp"
            android:rotation="-90"
            android:layout_gravity="center"
            android:text="@string/imagenes"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />
        <TextView
            android:id="@+id/tv_description_Fragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:padding="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:rotation="-90"
            android:text="@string/descripcion"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />
        <TextView
            android:id="@+id/tv_financing_Fragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:padding="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:rotation="-90"
            android:text="@string/financiacion"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />
        <TextView
            android:id="@+id/tv_comments_Fragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:padding="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:rotation="-90"
            android:text="@string/comentarios"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />





    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imagenes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/iv_circle_indicator"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35sp"
        android:layout_marginTop="@dimen/_130dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/circle_background"
        />


</androidx.constraintlayout.widget.ConstraintLayout>