<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/_10dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/custom_rectangle_shape">

    <ImageView
        android:id="@+id/iv_search_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tv_seach_title"
        android:layout_marginStart="16dp"
        tools:text="Rusty"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_search_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        />
    <TextView
        android:id="@+id/tv_search_subtitle"
        android:layout_marginStart="16dp"
        tools:text="Buzo canguro capucha con cordon"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/iv_search_photo"
        app:layout_constraintTop_toBottomOf="@id/tv_seach_title"
        android:layout_marginEnd="@dimen/_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_search_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$ 52.000"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_search_subtitle"
        app:layout_constraintStart_toEndOf="@id/iv_search_photo"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/search_button"
        app:layout_constraintTop_toBottomOf="@id/tv_search_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="@dimen/_50dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:text="@string/ver"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:background="@drawable/custom_rectangle_shape"
        android:backgroundTint="@color/login_In"
        android:layout_width="110dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/iv_search_empty_heart"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:background="@drawable/ic_heart_1"
        tools:ignore="ContentDescription" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_search_full_heart"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:background="@drawable/ic_heart_2"
        tools:ignore="ContentDescription" />
        

</androidx.constraintlayout.widget.ConstraintLayout>