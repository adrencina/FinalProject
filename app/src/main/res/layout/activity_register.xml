<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/robotocondensedsemibold"
        android:text="@string/registrarse"
        android:textColor="@color/black"
        android:layout_marginStart="37dp"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="284dp"
        android:layout_height="54dp"
        android:layout_marginTop="136dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/edittext_border"
        android:fontFamily="@font/robotoregular"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="37dp"
        android:layout_marginStart="37dp"
        android:textColor="@color/et_hint"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/ic_mail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="9dp"
        android:contentDescription="@string/icono_de_mail"
        android:src="@drawable/ic_mail"
        app:layout_constraintBottom_toBottomOf="@+id/et_email"
        app:layout_constraintStart_toStartOf="@+id/et_email"
        app:layout_constraintTop_toTopOf="@+id/et_email" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="284dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="37dp"
        android:autofillHints="password"
        android:background="@drawable/edittext_border"
        android:fontFamily="@font/robotoregular"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="37dp"
        android:textColor="@color/et_hint"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/ic_password"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="9dp"
        android:contentDescription="@string/icono_de_password"
        android:src="@drawable/ic_password"
        app:layout_constraintBottom_toBottomOf="@+id/et_password"
        app:layout_constraintStart_toStartOf="@+id/et_password"
        app:layout_constraintTop_toTopOf="@+id/et_password" />

    <CheckBox
        android:id="@+id/cb_password"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/robotocondensedsemibold"
        android:text="@string/mostrar_contrase_a"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/cb_password"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="284dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:autofillHints="password"
        android:background="@drawable/edittext_border"
        android:fontFamily="@font/robotoregular"
        android:hint="@string/ConfirmacontraseÃ±a"
        android:inputType="textPassword"
        android:paddingStart="37dp"
        android:layout_marginStart="37dp"
        android:textColor="@color/et_hint"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/ic_confirm_password"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="9dp"
        android:contentDescription="@string/icono_de_password"
        android:src="@drawable/ic_password"
        app:layout_constraintBottom_toBottomOf="@+id/et_confirm_password"
        app:layout_constraintStart_toStartOf="@+id/et_confirm_password"
        app:layout_constraintTop_toTopOf="@+id/et_confirm_password" />

    <CheckBox
        android:id="@+id/cb_show_password"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/robotocondensedsemibold"
        android:text="@string/mostrar_contrase_a"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/cb_show_password"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_init_login"
        android:layout_width="284dp"
        android:layout_height="43dp"
        android:layout_marginBottom="71dp"
        android:layout_marginStart="37dp"
        app:cardBackgroundColor="@color/btn_pre_login"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/robotobold"
            android:gravity="center"
            android:text="@string/Entrar"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/robotoregular"
        android:text="@string/txt_cuenta"
        android:textColor="@color/txt_register"
        android:textSize="16sp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_init_login" />

    <TextView
        android:id="@+id/tv_bold_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotocondensedsemibold"
        android:text="@string/txt_registreaqui"
        android:textColor="@color/txt_register"
        android:textSize="16sp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/tv_register"
        app:layout_constraintTop_toBottomOf="@+id/cv_init_login" />

</androidx.constraintlayout.widget.ConstraintLayout>