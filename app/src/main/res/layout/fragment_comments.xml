<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.commentsFragment.CommentsFragment">

    <LinearLayout
        android:id="@+id/ll_left_bar"
        android:layout_width="53dp"
        android:layout_height="0dp"
        android:background="#7353BA"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_images_Fragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/robotoregular"
            android:padding="0dp"
            android:rotation="-90"
            android:text="@string/imagenes"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_description_Fragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/robotoregular"
            android:padding="0dp"
            android:rotation="-90"
            android:text="@string/descripcion"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_financing_Fragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/robotoregular"
            android:padding="0dp"
            android:rotation="-90"
            android:text="@string/financiacion"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_comments_Fragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/robotoregular"
            android:padding="0dp"
            android:rotation="-90"
            android:text="@string/comentarios"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>



    <View
        android:id="@+id/iv_circle_indicator"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="35sp"
        android:layout_marginTop="600dp"
        android:background="@drawable/circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageView
        android:id="@+id/Btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:src="@drawable/ic_back_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comentarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginTop="74dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="20dp"
        android:background="@color/b7b7b7"
        android:contentDescription="@string/imageview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_Comment_1"
        android:layout_width="300dp"
        android:layout_height="209dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginTop="127dp"
        android:background="@color/white"
        app:cardElevation="20dp"
        app:cardCornerRadius="5dp">


        <TextView
            android:id="@+id/tv_cv1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Emilce:"
            android:textSize="@dimen/_16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_cv1_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/_7353ba"
            android:contentDescription="@string/imageview"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_cv1_comment"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/robotobold"
            android:layout_marginHorizontal="20dp"
            android:textSize="@dimen/_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially survived not only
five centuries,
but also the leap "/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_Comment_2"
        android:layout_width="300dp"
        android:layout_height="209dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        app:cardElevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/cv_Comment_1"
        app:cardCornerRadius="5dp">


        <TextView
            android:id="@+id/tv_cv2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pepe:"
            android:textSize="@dimen/_16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_cv2_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/_7353ba"
            android:contentDescription="@string/imageview"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_cv2_comment"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/robotobold"
            android:layout_marginHorizontal="20dp"
            android:textSize="@dimen/_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially  "
            />
    </androidx.cardview.widget.CardView>
    
    <TextView
        android:id="@+id/tv_price"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="80dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="$ 24.840"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/robotobold"
        android:text="comprar"
        android:textSize="@dimen/_10dp"
        android:background="@drawable/custom_rectangle_shape2"/>




</androidx.constraintlayout.widget.ConstraintLayout>